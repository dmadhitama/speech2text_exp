body {  
    font-family: Arial, sans-serif;  
  }  
    
  .container {  
    width: 50%;  
    margin: auto;  
    padding: 20px;  
    border: 1px solid #ccc;  
    border-radius: 10px;  
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);  
  }  
    
  .form-group {  
    margin-bottom: 15px;  
  }  
    
  label {  
    display: block;  
    margin-bottom: 5px;  
  }  
    
  input[type="text"],  
  textarea,  
  select {  
    width: 100%;  
    padding: 10px;  
    margin-bottom: 10px;  
    border: 1px solid #ccc;  
    border-radius: 5px;  
  }  
    
  button {  
    padding: 10px 15px;  
    background-color: #007bff;  
    color: white;  
    border: none;  
    border-radius: 5px;  
    cursor: pointer;  
  }  
    
  button[disabled] {  
    background-color: #ccc;  
    cursor: not-allowed;  
  }  
  